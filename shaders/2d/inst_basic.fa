#version 330 core

uniform sampler2D aTexture;
uniform bool textured;

out vec4 FragColor;

in vec2 TexCoord;
in vec4 color;

void main()
{
    if (textured) {
        vec4 tex_color = texture(aTexture, TexCoord);
        FragColor = tex_color * color;
    } else {
        FragColor = color;
    }
	//if (FragColor.a < 0.5) discard;
}