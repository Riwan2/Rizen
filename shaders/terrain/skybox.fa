#version 330 core

out vec4 outColor;

in vec3 texCoord;

uniform samplerCube skybox;
uniform vec3 fogColor = vec3(0, 0, 0);

const float lowerLimit = -20;
const float upperLimit = 50;

float dezoom = 0.5;

void main() 
{
    vec3 tex_coord = texCoord * dezoom;
	vec4 textureColor = texture(skybox, tex_coord);
	//float factor = (texCoord.y - lowerLimit) / (upperLimit - lowerLimit);
	//factor = clamp(factor, 0.0, 1.0);
	//outColor = mix(vec4(fogColor, 1.0), textureColor, factor);
	outColor = textureColor;
}